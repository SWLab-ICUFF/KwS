#!/bin/bash

export JVM_ARGS=${JVM_ARGS:--Xmx14G}
export JENA_HOME=/Users/lapaesleme/local/etc/jena/apache-jena-3.13.1
export PATH=$PATH:$JENA_HOME/bin

