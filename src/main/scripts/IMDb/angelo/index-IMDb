java -cp "/Users/lapaesleme/local/etc/jena/apache-jena-fuseki-3.13.1/fuseki-server.jar" jena.textindexer --desc="/Users/lapaesleme/local/var/db/tdb/2/run/configuration/IMDb2.ttl"
