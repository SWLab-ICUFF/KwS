#!/bin/bash
export JVM_ARGS=${JVM_ARGS:--Xmx14G}
export JENA_HOME=/Users/lapaesleme/local/etc/jena/apache-jena-fuseki-3.13.1
export DATA_HOME=/Volumes/Data/Users/lapaesleme/local/var/db/tdb/2/run
export SCRIPT_HOME=/Users/lapaesleme/GitHub/KwS/src/main/scripts/Mondial
export PATH=$PATH:$JENA_HOME/bin

cp $SCRIPT_HOME/Mondial.ttl.new $DATA_HOME/configuration/Mondial.ttl
java -cp $JENA_HOME/fuseki-server.jar jena.textindexer --desc=$DATA_HOME/configuration/Mondial.ttl"
